<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="5dp"
    android:background="@mipmap/qsbj">

    <LinearLayout
        android:layout_width="match_parent" android:orientation="vertical"
        android:layout_height="match_parent">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="130dp"
         android:layout_marginTop="30dp"
         android:background="@drawable/greenborder">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单月总金"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:textSize="16dp"/>
         <TextView
            android:id="@+id/dyzj"
             android:layout_width="75dp"
             android:layout_height="30dp"
             android:layout_marginTop="25dp"
             android:layout_marginLeft="90dp"
             android:background="#FFFFFFFF"
             android:textSize="16dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="店铺收入"
             android:layout_marginTop="80dp"
             android:layout_marginLeft="20dp"

             android:textSize="16dp"/>
         <TextView
             android:id="@+id/dpsr"
             android:layout_width="75dp"
             android:layout_height="25dp"
             android:layout_marginTop="80dp"
             android:layout_marginLeft="90dp"
             android:background="#FFFFFFFF"
             android:textSize="16dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="店商收款"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="190dp"
             android:textSize="16dp"/>
         <TextView
             android:id="@+id/dssk"
             android:layout_width="75dp"
             android:layout_height="30dp"
             android:layout_marginTop="25dp"
             android:layout_marginLeft="260dp"
             android:background="#FFFFFFFF"
             android:textSize="16dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="网络收款"
             android:layout_marginTop="80dp"
             android:layout_marginLeft="190dp"

             android:textSize="16dp"/>
         <TextView
             android:id="@+id/wlsk"
             android:layout_width="75dp"
             android:layout_height="30dp"
             android:layout_marginTop="75dp"
             android:layout_marginLeft="260dp"
             android:background="#FFFFFFFF"
             android:textSize="16dp"/>
     </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:textSize="26dp"
                android:text="照片预览"/>
            <Button
                android:layout_width="160dp"
                android:layout_height="35dp" android:onClick="kqpcht_Click"
                android:background="@mipmap/pcscan" android:layout_marginTop="-5dp"
                android:text="开启PC后台"  android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"  android:layout_marginLeft="19dp"
                android:layout_height="wrap_content" android:textSize="19dp" android:text="客户"  />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <GridView
                android:id="@+id/OnePersonImg"
                android:layout_width="260dp"
                android:background="#FFFFFFFF"
                android:layout_height="300dp"
                android:columnWidth="255dp"
                android:stretchMode="columnWidth"
                android:numColumns="auto_fit"
                android:verticalSpacing="1dip"
                android:gravity="top"
                ></GridView>
            <GridView
                android:id="@+id/AllPersonImg"
                android:layout_marginLeft="15dp"
                android:layout_width="80dip"
                android:background="#FFFFFFFF"
                android:layout_height="300dp"
                android:columnWidth="70dip"
                android:stretchMode="columnWidth"
                android:numColumns="auto_fit"
                android:verticalSpacing="1dip"
                android:gravity="top"
                ></GridView>

        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="79dp">
            <TextView
                android:layout_width="30dp" android:layout_marginTop="-15dp"
                android:layout_height="68dp" android:text="金额" android:textSize="26dp"/>
        <TextView
            android:id="@+id/syje"

            android:background="#FFFFFFFF"
            android:layout_width="140dp"
            android:layout_height="68dp" android:layout_marginTop="10dp" android:textSize="55dp" />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:textSize="55dp" android:text="元" />
            <Button
                android:layout_width="wrap_content" android:layout_marginLeft="10dp" android:textColor="#FF0E0E9C"
                android:layout_height="70dp" android:background="@mipmap/xjfkan"
                android:text="现金付款" android:onClick="xjfkan_onclick"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:background="#FF008000"
        android:orientation="horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:layout_height="30dp" >
        <TextView

            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:text="账户余额"/>
        <TextView
            android:id="@+id/zhye"
            android:layout_width="75dp"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:background="#FFFFFFFF"
            android:textAlignment="center"
            />
    </LinearLayout>

</RelativeLayout>